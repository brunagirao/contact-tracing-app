<aura:component implements="force:appHostable">
    <lightning:layout multipleRows="true">
        <lightning:layoutItem size="12">
            <div class="slds-page-header slds-page-header_record-home">
                <div class="slds-page-header__row">
                    <div class="slds-page-header__col-title">
                        <div class="slds-media">
                            <div class="slds-media__figure">
                                <span class="slds-icon_container slds-icon-standard-opportunity">
                                    <lightning:icon iconName="standard:queue" alternativeText="Contact Tracing" title="Contact Tracing"/>
                                </span>
                            </div>
                            <div class="slds-media__body">
                                <div class="slds-page-header__name">
                                    <div class="slds-page-header__name-title">
                                        <h1>
                                            <span>Contact Tracing</span>
                                            <span class="slds-page-header__title slds-truncate" title="Person View">Person View</span>
                                        </h1>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="slds-page-header__col-actions">
                    <div class="slds-page-header__controls">
                            <div class="slds-page-header__control">
                                <ul class="slds-button-group-list">
                                    <li>
                                        <button class="slds-button slds-button_neutral">Add New</button>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="slds-page-header__row slds-page-header__row_gutters">
                    <div class="slds-page-header__col-details">
                        <ul class="slds-page-header__detail-row">
                            <li class="slds-page-header__detail-block">
                                <div class="slds-text-title slds-truncate" title="Field 1">Green</div>
                                <div class="" title="">23</div>
                            </li>
                            <li class="slds-page-header__detail-block">
                                <div class="slds-text-title slds-truncate" title="Field 1">Yellow</div>
                                <div class="" title="">12</div>
                            </li>
                            <li class="slds-page-header__detail-block">
                                <div class="slds-text-title slds-truncate" title="Field 1">Orange</div>
                                <div class="" title="">64</div>
                            </li>
                            <li class="slds-page-header__detail-block">
                                <div class="slds-text-title slds-truncate" title="Field 1">Red</div>
                                <div class="" title="">3</div>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </lightning:layoutItem>
        <lightning:layoutItem size="12">
            <lightning:tabset variant="vertical">
                <lightning:tab label="Person View" id="person_view">
                    Person View
                </lightning:tab>
                <lightning:tab label="Location View" id="location_view">
                    Location View
                </lightning:tab>
            </lightning:tabset>
        </lightning:layoutItem>
    </lightning:layout>
</aura:component>	
