<aura:component controller="CTRecentChangesController">
    <aura:attribute name="data" type="Object"/>
    <aura:attribute name="columns" type="List"/>
    <aura:attribute name="isssearching" type="Boolean" default="false"/>
    <aura:attribute name="scope" type="String" default="person" />

    <aura:handler name="init" value="{!this}" action="{!c.doInit}" />

    <lightning:card title="Recent Changes">
        <aura:set attribute="actions">
            <lightning:input
                aura:id="enter-search" 
                name="search" 
                label="Hit 'enter' to search" 
                isLoading="{!v.isssearching}"
                type="seach"
                placeholder="Search here..."/>
        </aura:set>

        <div style="height: 300px">
            <lightning:datatable 
                keyField="id" 
                data="{!v.data}" 
                columns="{!v.columns}" 
                hideCheckboxColumn="true" />
        </div>
    </lightning:card>
</aura:component>	
